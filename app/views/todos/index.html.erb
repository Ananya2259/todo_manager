<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-title">My Todo-list</h1>
  <section class="AddTodo">
      <input type="text" class="AddTodo-text" placeholder="What's next">
      <input type="date" class="AddTodo-date">
      <input type="button" value="Add" class="AddTodo-button">
 </section>
<%= render partial: "todo-section", locals: {
             section_title: "Overdue",
             todos: Todo.overdue.notcompleted,
             show_due_date: true,
           } %>
<%= render partial: "todo-section", locals: {
             section_title: "Duetoday",
             todos: Todo.duetoday,
             show_due_date: false,
           } %>
<%= render partial: "todo-section", locals: {
             section_title: "Due Later.",
             todos: Todo.duelater,
             show_due_date: true,
           } %>
  </article>
</main>
